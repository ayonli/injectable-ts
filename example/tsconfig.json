{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "preserveConstEnums": true,
        "newLine": "LF",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "es2015"
        ]
    },
    "files": [
        "./index.ts",
    ],
    "exclude": [
        "node_modules/*",
        "../src/*"
    ]
}